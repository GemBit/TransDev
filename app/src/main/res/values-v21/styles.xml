<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">

        <item name="android:textColorPrimary">?android:attr/textColor</item>
        <item name="android:textColorPrimaryInverse">?attr/textColorInverse</item>
        <item name="android:textColorSecondary">?android:attr/textColor</item>
        <item name="android:textColorSecondaryInverse">?attr/textColorInverse</item>

        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>

        <item name="android:textColor">?android:attr/colorForeground</item>
        <item name="textColorInverse">?android:attr/colorBackground</item>

        <item name="textColorError">@android:color/holo_red_light</item>

        <item name="titleTextColor">@android:color/white</item>

    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Base">

        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FFB322</item>
        <item name="colorAccentDark">#C19011</item>

        <item name="android:colorBackground">#303030</item>
        <item name="android:colorForeground">#F8F8F8</item>

    </style>

    <style name="AppTheme.Light" parent="AppTheme.Base">

        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#008074</item>
        <item name="colorAccent">#1E88E5</item>
        <item name="colorAccentDark">#0779AA</item>

        <item name="android:colorBackground">#F8F8F8</item>
        <item name="android:colorForeground">#303030</item>

    </style>

</resources>