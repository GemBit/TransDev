<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingEnd="@dimen/largeGap"
    android:paddingStart="@dimen/largeGap"
    android:paddingTop="@dimen/smallGap">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/mediumTextSize" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/microGap"
        android:alpha="0.8"
        android:textSize="@dimen/smallTextSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/subTitle"
        android:alpha="0.4"
        android:layout_marginTop="@dimen/smallGap"
        android:background="?android:attr/colorForeground"
        android:foreground="?android:attr/colorForeground" />

</RelativeLayout>